<%- include("./partials/header") -%>

<div class = "container">
	<% if(info.length === 0) { %>
		<h1 class = "noRequest">There are currently no requests</h1>
		
	<% }else{ %>
	<table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Phone number</th>
      <th scope="col">Message</th>
	  <th></th>
    </tr>
  </thead>
  <tbody>
	 <% info.forEach(function(info){ %>
    <tr>
      <td><%=info.name%></td>
      <td><%=info.phone%></td>
		<td><%=info.message%></td>
		<td><form action = "/request/<%=info._id%>?_method=DELETE" method = "POST"><button  class="btn btn-danger">Delete</button></form></td>
    </tr>
	 <% }) %>
  </tbody>
</table>
	<% } %>

</div>



	
	


<%- include("./partials/footer") -%>
