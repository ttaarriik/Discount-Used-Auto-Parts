<%- include("./partials/header") -%>

<div class = "container">
	<% if(part.length === 0 && noResults !== null) { %>
		<h1 class = "noRequest"><%=noResults.noResults%><%=searchedCar.year%> <%=searchedCar.make%> <%=searchedCar.part%></h1>
	<% }else if(part.length === 0){ %>
		<h1 class = "noRequest">There are currently no parts</h1>	
	<% }else{ %>
	<table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">Year</th>
      <th scope="col">Make/Model</th>
      <th scope="col">Part</th>
    </tr>
  </thead>
  <tbody>
	 <% part.forEach(function(part){ %>
    <tr>
      <td><%=part.year%></td>
      <td><%=part.make%></td>
		<td><%=part.part%>
		<% if(currentUser){ %>
		<form action = "/showParts/<%=part._id%>?_method=DELETE" method = "POST"><button  class="btn btn-danger">Delete</button></form></td>
		<%	} %>
    </tr>
	 <% }) %>
  </tbody>
</table>
	<% } %>

</div>



<%- include("./partials/footer") -%>
